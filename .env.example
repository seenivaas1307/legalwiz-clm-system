# .env.example - Template for environment variables

# Neo4j Configuration
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password
NEO4J_DATABASE=neo4j

# Supabase PostgreSQL
DB_HOST=db.xxx.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-supabase-password
DB_SSLMODE=require

# API Settings
API_PORT=8000
DEBUG=True

# LLM Configuration (optional - AI features work without it at reduced capability)
# Provider options: groq (recommended), gemini, openai

# Option 1: Groq (RECOMMENDED - fast & generous free tier)
LLM_PROVIDER=groq
LLM_API_KEY=your-groq-api-key
LLM_MODEL=llama-3.1-70b-versatile
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096

# Option 2: Google Gemini
# LLM_PROVIDER=gemini
# LLM_API_KEY=your-gemini-api-key
# LLM_MODEL=gemini-2.0-flash
# LLM_TEMPERATURE=0.1
# LLM_MAX_TOKENS=4096

# Option 3: OpenAI
# LLM_PROVIDER=openai
# LLM_API_KEY=your-openai-api-key
# LLM_MODEL=gpt-4o
# LLM_TEMPERATURE=0.1
# LLM_MAX_TOKENS=4096

# JWT Authentication
# Set AUTH_REQUIRED=true to enforce JWT tokens on all routes
AUTH_REQUIRED=false
JWT_SECRET_KEY=change-this-to-a-random-secret-in-production
JWT_ACCESS_EXPIRE_MINUTES=60
JWT_REFRESH_EXPIRE_DAYS=7

# DocuSign E-Signature (optional â€” endpoints return 503 if not configured)
# Get credentials from https://developers.docusign.com
# DOCUSIGN_INTEGRATION_KEY=your-integration-key
# DOCUSIGN_USER_ID=your-user-guid
# DOCUSIGN_ACCOUNT_ID=your-account-id
# DOCUSIGN_RSA_PRIVATE_KEY=base64-encoded-private-key
# DOCUSIGN_BASE_URL=https://demo.docusign.net/restapi
# DOCUSIGN_OAUTH_HOST=account-d.docusign.com
# DOCUSIGN_RETURN_URL=http://localhost:3000/signing-complete
